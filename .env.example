# ============================================================================
# AZURE FOUNDRY SETTINGS
# ============================================================================
AZURE_AI_FOUNDRY_ENDPOINT=your_foundry_endpoint_here
AZURE_AI_FOUNDRY_API_KEY=your_foundry_api_key_here
AZURE_AI_FOUNDRY_PROJECT_ID=your_foundry_project_id_here
AZURE_AI_FOUNDRY_PROJECT_NAME=your_foundry_project_name_here
AZURE_AI_FOUNDRY_PROJECT_DESCRIPTION=your_foundry_project_description_here
AZURE_AI_FOUNDRY_PROJECT_VERSION=1.0.0  # Version of the project
AZURE_AI_FOUNDRY_PROJECT_CLIENT=your_foundry_project_client_here
AI_PROJECT_CLIENT=your_ai_project_client_here

AZURE_AI_OPENAI_ENDPOINT=your_openai_endpoint_here
AZURE_AI_OPENAI_TARGET_URI="your_openai_target_uri_here"
AZURE_AI_OPENAI_API_KEY=your_openai_api_key_here
AZURE_AI_OPENAI_API_VERSION=2024-12-01-preview
AZURE_AI_OPENAI_DEPLOYMENT_NAME="gpt-4.1"

# ============================================================================
# AZURE OPENAI SETTINGS
# ============================================================================
AZURE_OPENAI_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_DEPLOYMENT_NAME=gpt-4

# ============================================================================
# AZURE FOUNDRY LOCAL SETTINGS
# ============================================================================
LOCAL_MODEL_ENDPOINT=http://localhost:8080
LOCAL_MODEL_NAME=phi-3.5-mini
LOCAL_API_KEY=not-needed

# Telemetry Configuration (Optional)
AZURE_MONITOR_CONNECTION_STRING=your_app_insights_connection_string_here
ENABLE_TELEMETRY=true

# Application Settings
MAX_CONTEXT_LENGTH=4000
RESPONSE_TIMEOUT=30
DEBUG_MODE=false

# Routing Configuration
COMPLEXITY_THRESHOLD=0.5
LOCAL_MODEL_MAX_TOKENS=500
CLOUD_MODEL_MAX_TOKENS=1500

# ============================================================================
# AZURE API MANAGEMENT (APIM) SETTINGS
# ============================================================================
# APIM Gateway Configuration
APIM_ENDPOINT=https://your-apim-instance.azure-api.net
APIM_SUBSCRIPTION_KEY=your_apim_subscription_key_here
APIM_API_VERSION=2024-02-15-preview
APIM_RATE_LIMIT_PER_MINUTE=60
APIM_TIMEOUT_SECONDS=30

# APIM OpenAI Service Configuration
APIM_OPENAI_API_PATH=/openai/v1
APIM_OPENAI_DEPLOYMENT_NAME=gpt-4
APIM_OPENAI_MAX_TOKENS=1500
APIM_OPENAI_TEMPERATURE=0.7

# APIM Authentication
APIM_CLIENT_ID=your_apim_client_id_here
APIM_CLIENT_SECRET=your_apim_client_secret_here
APIM_TENANT_ID=your_tenant_id_here

# ============================================================================
# BERT MOBILE ROUTER CONFIGURATION
# ============================================================================
# BERT Model Settings
BERT_MODEL_PATH=./notebooks/mobilbert_query_router_trained
BERT_MODEL_FULLPATH=./notebooks/mobilbert_query_router_trained
BERT_MODEL_NAME=google/mobilebert-uncased
BERT_MAX_SEQUENCE_LENGTH=128
BERT_CONFIDENCE_THRESHOLD=0.7
BERT_BATCH_SIZE=1

# BERT Training Configuration
BERT_LEARNING_RATE=2e-5
BERT_NUM_EPOCHS=3
BERT_WARMUP_STEPS=500
BERT_WEIGHT_DECAY=0.01

# BERT Inference Settings
BERT_DEVICE=auto  # auto, cpu, cuda
BERT_USE_FAST_TOKENIZER=true
BERT_RETURN_ALL_SCORES=false
BERT_ENABLE_CACHING=true

# ============================================================================
# PHI ROUTER CONFIGURATION
# ============================================================================
# Phi Model Settings
PHI_MODEL_PATH=./phi_query_router_model
PHI_MODEL_FULLPATH=./phi_query_router_model
PHI_BASE_MODEL_NAME=microsoft/Phi-3.5-mini-instruct
PHI_MAX_SEQUENCE_LENGTH=512
PHI_CONFIDENCE_THRESHOLD=0.7
PHI_TEMPERATURE=0.1
PHI_DO_SAMPLE=false

# Phi Fine-tuning Configuration
PHI_LORA_RANK=16
PHI_LORA_ALPHA=32
PHI_LORA_DROPOUT=0.1
PHI_USE_QUANTIZATION=true
PHI_USE_BF16=true

# Phi Inference Settings
PHI_DEVICE=auto  # auto, cpu, cuda
PHI_BATCH_SIZE=1
PHI_MAX_NEW_TOKENS=50
PHI_RETURN_FULL_TEXT=false

# ============================================================================
# HYBRID ROUTING CONFIGURATION
# ============================================================================
# Router Selection Priority
ROUTER_PRIORITY=bert,phi,rule  # Order of router preference
ENABLE_BERT_ROUTER=true
ENABLE_PHI_ROUTER=true
ENABLE_RULE_ROUTER=true

# Fallback Configuration
ENABLE_ROUTER_FALLBACK=true
FALLBACK_TO_CLOUD_ON_ERROR=true
LOG_ROUTER_DECISIONS=true

# Performance Monitoring
TRACK_INFERENCE_TIME=true
TRACK_ROUTER_ACCURACY=true
SAVE_ROUTING_STATS=true

ML_CONFIDENCE_THRESHOLD=0.7